<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context=".Frgaments.SongDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/imgv_artistImage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="@dimen/_15sdp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_albumName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demo Album Name"
                android:gravity="center"
                android:layout_gravity="center"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp"
                    android:weightSum="2">

                <TextView
                        android:id="@+id/tv_songsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Demo Song Name"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/tv_songsReleaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Demo Song Release Date"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>